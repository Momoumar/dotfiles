# SERVER BINARIES
# ###################################################################################################################################################

# Version Control
install 'git'
install 'git-flow' # Mavericks does deliver a further old git version, compare `brew info git` with `git --version`
install 'mercurial'

# Install other useful binaries
install 'ack'
install 'ctags'
install 'htop'
install 'hub'
install 'multitail'
install 'ngrep'
install 'ssh-copy-id'
install 'tmux'
install 'tree'
install 'wget'
install 'youtube-dl'

# Install more recent versions of some OS X tools
install 'vim --override-system-vi'

